{
  "name": "message-template",
  "version": "0.0.0",
  "_comments": {
    "scripts": {
      "start": "Starts the Angular development server",
      "watch": "Builds the project in watch mode with the development configuration",
      "dev": "Runs Orval (API generator) and then Angular CLI",
      "build": "Runs Orval and then builds the project for production"
    },
    "dependencies": "Main dependencies required for the application to run",
    "devDependencies": "Development tools and libraries for building and testing the application"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "dev": "orval --config ./orval.config.ts && ng",
    "test": "ng test",
    "build": "orval --config ./orval.config.ts && ng build",
    "serve:ssr:message-template": "node dist/message-template/server/server.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.6",
    "@angular/compiler": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/platform-server": "^21.0.6",
    "@angular/router": "^21.0.6",
    "@angular/ssr": "^21.0.4",
    "@primeuix/themes": "^2.0.2",
    "express": "^5.1.0",
    "orval": "^7.13.2",
    "primeng": "^21.0.2",
    "quill": "^2.0.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.6",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
